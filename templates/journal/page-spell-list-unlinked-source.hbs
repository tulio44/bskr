<fieldset>
    <legend>{{ localize "BSKR.SOURCE.FIELDS.source.label" }}</legend>
    <div class="form-group">
        <label>{{ localize "BSKR.SOURCE.FIELDS.source.book.label" }}</label>
        <div class="form-fields">
            <input type="text" name="source.book" value="{{ source.book }}" list="{{ partId }}-books">
            <datalist id="{{ partId }}-books">
                {{selectOptions CONFIG.sourceBooks}}
            </datalist>
        </div>
    </div>
    {{ formField fields.source.fields.page value=source.page label="BSKR.SOURCE.FIELDS.source.page.label"
                 localize=true rootId=partId }}
    {{ formField fields.source.fields.custom value=source.custom label="BSKR.SOURCE.FIELDS.source.custom.label"
                 localize=true rootId=partId }}
    {{ formField fields.source.fields.uuid value=source.uuid label="BSKR.SOURCE.FIELDS.source.uuid.label"
                 localize=true rootId=partId }}
</fieldset>
