<form id="{{ appId }}" data-level="{{ level }}" data-id="{{ advancement.id }}" data-type="{{ type }}">
    <h3>{{{ title }}}</h3>
    {{#if advancement.hint}}<p>{{ advancement.hint }}</p>{{/if}}

    {{#if showImprovement}}
    <ul class="ability-scores {{#if lockImprovement}}disabled{{/if}}">
        {{#unless staticIncrease}}
        <label>
            {{#if lockImprovement}}
            {{ localize "BSKR.ADVANCEMENT.AbilityScoreImprovement.LockedHint" }}
            {{else}}
            {{ pointsRemaining }}
            {{#if advancement.configuration.cap}}<p class="cap">{{ pointCap }}</p>{{/if}}
            {{/if}}
        </label>
        {{/unless}}
        {{#each abilities}}
        {{> "bskr.advancement-ability-score-control" this canAdjust=(not @root.staticIncrease) }}
        {{/each}}
    </ul>
    {{/if}}

    {{#if advancement.allowFeat}}
    <div class="feat-section flexcol">
        {{#if showImprovement}}<h3>{{ localize "BSKR.Feature.Feat.Label" }}</h3>{{/if}}

        {{#if showASIFeat}}
        <div class="pill-lg {{#if lockImprovement}}locked{{/if}}">
            <img class="gold-icon" src="icons/skills/melee/weapons-crossed-swords-white-blue.webp"
                 alt="{{ localize 'BSKR.ADVANCEMENT.AbilityScoreImprovement.Feat.ASIName' }}">
            <div class="name-stacked">
                <div class="title">{{ localize "BSKR.ADVANCEMENT.AbilityScoreImprovement.Feat.ASIName" }}</div>
            </div>
            <bskr-checkbox class="item-control" name="asi-selected" {{ checked feat.isASI }}
                            {{ disabled lockImprovement }}></bskr-checkbox>
        </div>
        {{/if}}

        {{#unless feat.isASI}}
        <div class="pill-lg {{#unless feat}}roboto-upper empty{{/unless}}"
             {{~#if feat}} data-uuid="{{ feat.uuid }}"{{else}} data-action="browse"{{/if}}>
            {{#if feat}}
            <img class="gold-icon" data-action="viewItem" src="{{ feat.img }}" alt="{{ feat.name }}">
            <div class="name-stacked">
                <div class="title">{{ feat.name }}</div>
            </div>
            <button type="button" class="unbutton control-button item-control" data-action="delete"
                    data-tooltip="BSKR.ItemDelete" aria-label="{{ localize 'BSKR.ItemDelete' }}">
                <i class="fas fa-trash" inert></i>
            </button>
            {{else}}
            {{ localize "BSKR.ADVANCEMENT.AbilityScoreImprovement.Action.Select" }}
            {{/if}}
        </div>
        {{/unless}}
    </div>
    {{/if}}
</form>
