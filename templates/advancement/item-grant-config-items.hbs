<fieldset class="card items">
    <legend>{{ localize "BSKR.ADVANCEMENT.ItemGrant.FIELDS.items.label" }}</legend>
    <div class="header">
        <div class="item-optional">{{ localize "BSKR.ADVANCEMENT.ItemGrant.FIELDS.optional.label" }}</div>
        <div class="item-name name-header">{{ localize "DOCUMENT.Item" }}</div>
    </div>
    <ol class="items-list unlist">
        {{#each items}}
        <li class="item flexrow" data-item-uuid="{{ data.uuid }}">
            <div class="item-optional">
                {{ formInput fields.optional name=(concat "configuration.items." @index ".optional") value=data.optional
                             input=@root.inputs.createCheckboxInput }}
            </div>
            <div class="item-name">
                {{{ bskr-linkForUuid data.uuid renderBroken=true }}}
                <input type="hidden" name="configuration.items.{{ @index }}.uuid" value="{{ data.uuid }}">
            </div>
            <div class="item-controls flexrow">
                {{#if @root.editable}}
                <a class="item-control item-action" data-action="deleteItem" data-tooltip="BSKR.ItemDelete"
                   aria-label="{{ localize 'BSKR.ItemDelete' }}">
                    <i class="fas fa-trash" inert></i>
                </a>
                {{/if}}
            </div>
        </li>
        {{/each}}
    </ol>

    <div class="form-group">
        {{#if showContainerWarning}}
        <p class="hint centered warning">{{ localize "BSKR.ADVANCEMENT.ItemGrant.Warning.Container" }}</p>
        {{/if}}
        <p class="hint centered drop-area">{{ localize "BSKR.ADVANCEMENT.ItemGrant.DropHint" }}</p>
    </div>
</fieldset>
