<section class="classes pills-lg {{#if @root.editable}}editing{{/if}}">
    {{#each classes as |cls|}}
    {{#if (eq cls.type "class")}}
    {{#bskr-itemContext cls as |ctx|}}
    <div class="class pill-lg" data-item-id="{{ cls.id }}" style="--underlay: url('{{ ctx.prefixedImage }}');">
        <div class="icons {{#if cls.subclass}}subclass{{/if}}">
            <img class="gold-icon item-tooltip" src="{{ cls.img }}" alt="{{ cls.name }}" data-action="view"
                 data-item-id="{{ cls.id }}">
            {{#if cls.subclass}}
            <img class="gold-icon item-tooltip" src="{{ cls.subclass.img }}" alt="{{ cls.subclass.name }}"
                 data-action="view" data-item-id="{{ cls.subclass.id }}">
            {{else if ctx.needsSubclass}}
            <a class="gold-icon subclass-icon" data-action="findItem" data-item-type="subclass"
               data-class-identifier="{{ cls.identifier }}" data-tooltip="BSKR.SubclassAdd"
               aria-label="{{ localize 'BSKR.SubclassAdd' }}">
               <i class="fa-solid fa-circle-plus" inert></i>
            </a>
            {{/if}}
            {{#if @root.editable}}
            <div class="controls">
                <a class="deletion-control item-control item-action" data-action="delete"
                   data-tooltip="BSKR.ItemDelete" data-item-id="{{ cls.id }}"
                   aria-label="{{ localize "BSKR.ItemDelete" }}">
                    <i class="fas fa-circle-xmark"></i>
                </a>
                {{#if cls.subclass}}
                <a class="deletion-control item-control item-action" data-action="delete"
                   data-tooltip="BSKR.ItemDelete" data-item-id="{{ cls.subclass.id }}"
                   aria-label="{{ localize "BSKR.ItemDelete" }}">
                    <i class="fas fa-circle-xmark"></i>
                </a>
                {{/if}}
            </div>
            {{/if}}
        </div>
        <div class="name-stacked">
            <div class="title">{{ cls.name }}</div>
            {{#if cls.subclass}}
            <div class="subtitle">{{ cls.subclass.name }}</div>
            {{/if}}
        </div>
        <div class="level">
            {{#if @root.editable}}
            <select class="level-selector">
                {{ selectOptions ctx.availableLevels selected=0 }}
            </select>
            {{else}}
            <span>{{ cls.system.levels }}</span>
            {{/if}}
        </div>
    </div>
    {{/bskr-itemContext}}
    {{/if}}
    {{/each}}
    {{#if @root.showClassDrop}}
    <div class="pill-lg empty roboto-upper" data-action="findItem" data-item-type="class">
        {{ localize "BSKR.ClassAdd" }}
    </div>
    {{/if}}
</section>
