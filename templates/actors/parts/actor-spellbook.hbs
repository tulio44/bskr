<{{elements.inventory}} class="inventory-element">
  <div class="inventory-filters spellbook-filters flexrow">
    <div class="form-group spellcasting-ability">
        {{#unless isNPC}}
        <label>{{localize "BSKR.Spellcasting"}}</label>
        {{else}}
        <label>{{localize "BSKR.Level"}}</label>
        {{numberInput system.attributes.spell.level name="system.attributes.spell.level" class="spellcasting-level"
                      placeholder="0" min=0 step=1 disabled=classSpellcasting}}
        {{/unless}}
        <select name="system.attributes.spellcasting" data-type="String">
            {{ selectOptions config.abilities selected=system.attributes.spellcasting labelAttr="label"
                             blank=(localize "BSKR.None") }}
        </select>
        <span>{{localize "BSKR.AbbreviationDC"}} {{system.attributes.spell.dc}}</span>
    </div>

    <ul class="filter-list flexrow" data-filter="spellbook">
        <li class="filter-item" data-filter="action">{{localize "BSKR.Action"}}</li>
        <li class="filter-item" data-filter="bonus">{{localize "BSKR.BonusAction"}}</li>
        <li class="filter-item" data-filter="reaction">{{localize "BSKR.Reaction"}}</li>
        <li class="filter-item" data-filter="concentration">{{localize "BSKR.AbbreviationConc"}}</li>
        <li class="filter-item" data-filter="ritual">{{localize "BSKR.Ritual"}}</li>
        <li class="filter-item" data-filter="prepared">{{localize "BSKR.Prepared"}}{{#if preparedSpells}} ({{preparedSpells}}){{/if}}</li>
    </ul>
  </div>

  <ol class="items-list inventory-list">
  {{#each spellbook as |section|}}
    <li class="items-header spellbook-header flexrow" {{ bskr-dataset section.dataset }}>
        <div class="item-name flexrow">
            <h3>{{section.label}}</h3>
            <div class="spell-slots">
                {{#if section.usesSlots}}
                <input type="text" name="system.spells.{{section.prop}}.value" value="{{section.uses}}" placeholder="0"
                       data-dtype="Number">
                <span class="sep"> / </span>
                <span class="spell-max" data-level="{{section.prop}}" data-slots="{{section.slots}}">
                    {{{section.slots}}}
                    {{#if section.editable}}
                    <a class="slot-max-override" data-tooltip="BSKR.SpellProgOverride">
                        <i class="fas fa-edit"></i>
                    </a>
                    {{/if}}
                </span>
                {{ else }}
                <span>{{{section.uses}}}</span>
                <span class="sep"> / </span>
                <span class="spell-max">{{{section.slots}}}</span>
                {{/if}}
            </div>
        </div>
        <div class="spell-school">{{localize "BSKR.SpellSchool"}}</div>
        <div class="spell-action">{{localize "BSKR.SpellUsage"}}</div>
        <div class="spell-target">{{localize "BSKR.SpellTarget"}}</div>

        <div class="item-controls flexrow">
            {{#if section.canCreate}}
            <a class="item-control item-action" data-action="create" data-tooltip="BSKR.SpellCreate">
                <i class="fas fa-plus"></i> {{localize "BSKR.Add"}}
            </a>
            {{/if}}
        </div>
    </li>

    <ol class="item-list">
    {{#each section.spells as |item i|}}
    {{#bskr-itemContext item as |ctx|}}
        <li class="item flexrow {{#if ctx.isExpanded}}expanded{{/if}}" data-item-id="{{item.id}}">
            <div class="item-name flexrow rollable">
                <div class="item-image item-action" data-action="use" tabindex="0" role="button"
                     aria-label="{{item.name}}" style="background-image: url('{{item.img}}')"></div>
                <h4 class="item-action" data-action="expand">{{item.name}}</h4>
                {{#if item.hasLimitedUses}}
                <div class="item-detail spell-uses">
                  {{localize "BSKR.Uses"}} {{#if item.system.uses.value}}{{item.system.uses.value}}{{else}}0{{/if}} / {{item.system.uses.max}}
                </div>
                {{/if}}
                <div class="spell-comps">
                    {{#each item.labels.components.all}}
                    <span class="spell-component{{#if tag}} tag{{/if}}">{{abbr}}</span>
                    {{/each}}
                </div>
            </div>
            <div class="spell-school">{{item.labels.school}}</div>
            <div class="spell-action">{{item.labels.activation}}</div>
            <div class="spell-target" data-tooltip="{{localize 'BSKR.Range'}}: {{item.labels.range}}">
                {{#if item.labels.target}}
                {{item.labels.target}}
                {{else}}{{localize 'BSKR.None'}}
                {{/if}}
            </div>

            {{#if @root.owner}}
            <div class="item-controls flexrow">
                {{#if section.canPrepare}}
                <a class="item-control item-action {{ctx.toggleClass}}" data-action="prepare"
                   data-tooltip="{{ctx.toggleTitle}}">
                    <i class="fas fa-sun"></i>
                </a>
                {{/if}}
                <a class="item-control item-action" data-action="edit" data-tooltip="BSKR.ItemEdit">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="item-control item-action" data-action="delete" data-tooltip="BSKR.ItemDelete">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
            {{/if}}

            {{#if ctx.isExpanded}}
                {{> "bskr.item-summary" (lookup @root.expandedData item.id)}}
            {{/if}}
        </li>
    {{/bskr-itemContext}}
    {{/each}}
    </ol>
  {{else}}
    {{#if owner}}
    {{#if filters.spellbook.size}}
    <li class="item flexrow"><p class="notes">{{localize "BSKR.FilterNoSpells"}}</p></li>
    {{else}}
    <li class="item flexrow inventory-header spellbook-header spellbook-empty" data-type="spell" data-level="{{lvl}}">
        <div class="item-controls flexrow">
            <a class="item-control item-action" data-action="create" data-tooltip="BSKR.SpellCreate">
                <i class="fas fa-plus"></i> {{localize "BSKR.SpellAdd"}}
            </a>
        </div>
    </li>
    <li class="item flexrow"><p class="notes">{{localize "BSKR.NoSpellLevels"}}</p></li>
    {{/if}}
    {{/if}}
  {{/each}}
  </ol>
</{{elements.inventory}}>
