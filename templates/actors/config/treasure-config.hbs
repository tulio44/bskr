<section class="flexcol">
    <fieldset class="card">
        <ol class="unlist">
            {{#each treasure}}
            <li>
                <label class="checkbox">
                    <span>{{ label }}</span>
                    <bskr-checkbox name="{{ name }}" {{#if checked}}checked{{/if}}
                                    {{#if disabled}}disabled{{/if}}></bskr-checkbox>
                </label>
            </li>
            {{/each}}
        </ol>
    </fieldset>
</section>
