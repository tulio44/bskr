<section>
    {{#each choices}}
    <fieldset class="traits card">
        <legend>{{ label }}</legend>
        {{> "bskr.traits-list" choices=children keyPath=(concat @root.keyPath ".value.") topLevel=true
            field=@root.checkbox input=@root.inputs.createCheckboxInput }}
    </fieldset>
    {{/each}}
    {{#if fields.custom}}
    <fieldset class="card">
        <legend>{{ localize "BSKR.Special" }}</legend>
        {{ formInput fields.custom value=data.custom }}
        <p class="hint">{{ localize "BSKR.SpecialHint" }}</p>
    </fieldset>
    {{/if}}
</section>
