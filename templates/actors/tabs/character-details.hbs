{{#*inline "skill-prof"}}
    <li data-key="{{ @key }}" {{~#if reference}} data-reference-tooltip="{{ reference }}"{{/if}}>
        <proficiency-cycle type="skill" name="{{ path }}.value" data-tooltip="{{ hover }}"
                           value="{{#if @root.editable}}{{ baseValue }}{{else}}{{ value }}{{/if}}"
                           aria-label="{{ localize hover }}" {{disabled (not @root.editable)}}></proficiency-cycle>
        {{#if @root.editable}}
        <select name="{{ path }}.ability" class="ability roboto-upper unselect">
            {{ selectOptions @root.config.abilities selected=baseAbility labelAttr="abbreviation" }}
        </select>
        {{else}}
        <div class="ability roboto-upper">{{ abbreviation }}</div>
        {{/if}}
        <a class="name {{ @root.rollableClass }} {{ roll }}">{{ label }}</a>
        <div class="bonus">{{ bskr-formatModifier total }}</div>
        {{#if @root.editable}}
        <a class="config-button" data-action="{{ type }}" data-tooltip="{{ config }}"
           aria-label="{{ localize config }}">
            <i class="fas fa-cog"></i>
        </a>
        {{else if hasPassive}}
        <div class="passive">{{ passive }}</div>
        {{/if}}
    </li>
{{/inline}}

{{#*inline "ability-prof"}}
    <li data-ability="{{ @key }}" class="{{ class }}">
        {{#if isConcentration}}
        <bskr-icon src="systems/bskr/icons/svg/statuses/concentrating.svg"></bskr-icon>
        {{else}}
        <proficiency-cycle type="ability" name="{{ path }}.proficient" data-tooltip="{{ hover }}"
                           value="{{#if @root.editable}}{{ baseProf }}{{else}}{{ proficient }}{{/if}}"
                           aria-label="{{ localize hover }}" {{ disabled (not @root.editable) }}></proficiency-cycle>
        {{/if}}
        <a class="name saving-throw full {{ @root.rollableClass }}">{{ label }}</a>
        <a class="name saving-throw abbr {{ @root.rollableClass }}">{{ abbr }}</a>
        <div class="bonus">{{ bskr-formatModifier save.value }}</div>
        {{#if @root.editable}}
        <a class="config-button" data-action="ability" data-tooltip="{{ config }}" aria-label="{{ localize config }}">
            <i class="fas fa-cog"></i>
        </a>
        {{/if}}
    </li>
{{/inline}}

<div class="tab details col-2" data-group="primary" data-tab="details">

    {{!-- Skills & Tools --}}
    <div class="left">

        {{!-- Skills --}}
        <filigree-box class="skills">
            <h3>
                <i class="fas fa-briefcase"></i>
                <span class="roboto-upper">{{ localize "BSKR.Skills" }}</span>
            </h3>
            <ul>
                {{#each config.skills}}
                {{#with (lookup @root.skills @key)}}
                    {{> "skill-prof" path=(concat "system.skills." @key) config="BSKR.SkillConfigure"
                        type="skill" hasPassive=true roll="skill-name" }}
                {{/with}}
                {{/each}}
            </ul>
        </filigree-box>

        {{!-- Tools --}}
        <filigree-box class="tools">
            {{#if editable}}
            <a class="trait-selector" data-trait="tool"
               data-tooltip="{{ localize "BSKR.TraitConfig" trait=(localize "BSKR.TraitToolProf") }}"
               aria-label="{{ localize "BSKR.TraitConfig" trait=(localize "BSKR.TraitToolProf") }}">
                <i class="fas fa-cog"></i>
            </a>
            {{/if}}
            <h3>
                <i class="fas fa-hammer"></i>
                <span class="roboto-upper">{{ localize "TYPES.Item.toolPl" }}</span>
            </h3>
            <ul>
                {{#each tools}}
                    {{> "skill-prof" path=(concat "system.tools." @key) config="BSKR.ToolConfigure"
                        type="tool" hasPassive=false roll="tool-name" }}
                {{/each}}
            </ul>
        </filigree-box>

    </div>

    {{!-- Background, Saving Throws, Proficiencies, & Senses --}}
    <div class="right">

        {{!-- Background & Saving Throws --}}
        <div class="top flexrow">

            {{!-- Saving Throws --}}
            <filigree-box class="saves">
                <h3>
                    <i class="fas fa-shield-heart"></i>
                    <span class="roboto-upper">{{ localize "BSKR.ClassSaves" }}</span>
                </h3>
                <ul>
                    {{#each saves}}
                        {{> "ability-prof" path=(concat "system.abilities." @key)
                            config=(localize "BSKR.AbilityConfigure" ability=label) }}
                    {{/each}}
                </ul>
            </filigree-box>

            {{!-- Background --}}
            <div class="pills-lg">
                {{#with creatureType}}
                <div class="pill-lg texture type" {{#if reference}}data-reference-tooltip="{{reference}}"{{/if}}>
                    <div class="gold-icon creature-type {{ class }}" style="background-image: url('{{ icon }}');"></div>
                    <div class="name name-stacked">
                        <span class="title">
                            {{ localize title }}
                        </span>
                        <span class="subtitle">{{ subtitle }}</span>
                    </div>
                    {{#if (and @root.editable @root.race)}}
                    <a class="config-button" data-action="type" data-tooltip="BSKR.CreatureTypeConfig"
                       aria-label="{{ localize "BSKR.CreatureTypeConfig" }}">
                        <i class="fas fa-cog"></i>
                    </a>
                    {{/if}}
                </div>
                {{/with}}
                {{#if race}}
                <div class="pill-lg texture race item-tooltip" data-action="view"
                     data-item-id="{{ system.details.race.id }}"
                     aria-label="{{#if actor.isOwner}}{{ localize "BSKR.ItemEdit" }}{{else}}{{ localize "BSKR.ItemView" }}{{/if}}">
                    {{#if system.details.race.img}}
                    <img class="gold-icon" src="{{ system.details.race.img }}" alt="{{ system.details.race.name }}">
                    {{/if}}
                    <div class="name name-stacked">
                        <span class="title">{{ system.details.race.name }}</span>
                        {{#if editable}}
                        <select class="actor-size unselect" name="system.traits.size">
                            {{ selectOptions config.actorSizes selected=source.traits.size labelAttr="label" }}
                        </select>
                        {{else}}
                        <span class="subtitle">{{ size.label }}</span>
                        {{/if}}
                    </div>
                    {{#if editable}}
                    <a class="item-control item-action" data-action="delete" data-tooltip="BSKR.ItemDelete"
                       aria-label="{{ localize "BSKR.ItemDelete" }}" data-tooltip-class data-tooltip-direction>
                        <i class="fas fa-trash"></i>
                    </a>
                    {{/if}}
                </div>
                {{else if actor.isOwner}}
                <div class="pill-lg empty roboto-upper" data-action="findItem" data-item-type="race">
                    {{ localize "BSKR.Species.Add" }}
                </div>
                {{/if}}
                {{#if background}}
                <div class="pill-lg texture background item-tooltip" data-action="view"
                     data-item-id="{{ system.details.background.id }}"
                     aria-label="{{#if actor.isOwner}}{{ localize "BSKR.ItemEdit" }}{{else}}{{ localize "BSKR.ItemView" }}{{/if}}">
                    {{#if system.details.background.img}}
                    <img class="gold-icon" src="{{ system.details.background.img }}"
                         alt="{{ system.details.background.name }}">
                    {{/if}}
                    <div class="name name-stacked">
                        <span class="title">{{ system.details.background.name }}</span>
                    </div>
                    {{#if editable}}
                    <a class="item-control item-action" data-action="delete" data-tooltip="BSKR.ItemDelete"
                       aria-label="{{ localize "BSKR.ItemDelete" }}" data-tooltip-class data-tooltip-direction>
                        <i class="fas fa-trash"></i>
                    </a>
                    {{/if}}
                </div>
                {{else if actor.isOwner}}
                <div class="pill-lg empty roboto-upper" data-action="findItem" data-item-type="background">
                    {{ localize "BSKR.BackgroundAdd" }}
                </div>
                {{/if}}
            </div>

        </div>

        {{!-- Senses --}}
        {{#if (or editable senses)}}
        {{> "bskr.actor-trait-pills" values=senses key="senses" icon="fas fa-eye"
            label="BSKR.Senses" configAction="senses" }}
        {{/if}}

        {{!-- Resistances --}}
        {{> "bskr.actor-trait-pills" values=traits.dr key="dr" color="green" icon="fas fa-shield-halved"
            label="BSKR.Resistances" }}

        {{!-- Immunities --}}
        {{#if editable}}
            {{> "bskr.actor-trait-pills" values=traits.di key="di" color="green" icon="fas fa-shield"
                label="BSKR.DamImm" }}
        {{else}}
            {{> "bskr.actor-trait-pills" values=traits.di key="di" color="green" icon="fas fa-shield"
                label="BSKR.Immunities" }}
        {{/if}}
        {{> "bskr.actor-trait-pills" values=traits.ci key="ci" color="green" svg="rosa-shield" label="BSKR.ConImm" }}

        {{!-- Vulnerabilities --}}
        {{> "bskr.actor-trait-pills" values=traits.dv key="dv" color="maroon" icon="fas fa-heart-crack"
            label="BSKR.Vulnerabilities" }}

        {{!-- Damage Modification --}}
        {{> "bskr.actor-trait-pills" values=traits.dm key="dm" icon="fas fa-heart-circle-plus"
            label="BSKR.DamageModification.Label" }}

        {{!-- Armor --}}
        {{> "bskr.actor-trait-pills" values=traits.armor key="armor" svg="checked-shield" label="BSKR.Armor" }}

        {{!-- Weapons --}}
        {{> "bskr.actor-trait-pills" values=traits.weapon key="weapon" svg="trait-weapon-proficiencies"
            label="TYPES.Item.weaponPl" }}

        {{!-- Languages --}}
        {{> "bskr.actor-trait-pills" values=traits.languages key="languages" icon="fas fa-flag"
            label="BSKR.Languages" }}

    </div>
</div>
