<div class="statblock npc">
    <h4 class="statblock-title">{{#if anchor}}{{{ anchor }}}{{else}}{{ name }}{{/if}}</h4>
    <span class="statblock-tags">{{ summary.tag }}</span>
    <div class="statblock-content">
        <div class="statblock-header">
            <dl>
                <div class="half-width">
                    <dt>{{ localize "BSKR.AC" }}</dt>
                    <dd>{{ system.attributes.ac.value }}</dd>
                </div>
                <div class="half-width">
                    <dt>{{ localize "BSKR.Initiative" }}</dt>
                    <dd>{{ summary.initiative }}</dd>
                </div>
                <div>
                    <dt>{{ localize "BSKR.HP" }}</dt><dd>{{ system.attributes.hp.max }}</dd>
                    {{~#if system.attributes.hp.formula~}}
                    <dd>({{ system.attributes.hp.formula }})</dd>
                    {{~/if~}}
                </div>
                <div>
                    <dt>{{ localize "BSKR.Speed" }}</dt>
                    <dd>{{ summary.speed }}</dd>
                </div>
            </dl>
            <div class="abilities">
                {{#each abilityTables}}
                <table>
                    <thead>
                        <tr>
                            <th scope="col" class="visually-hidden">{{ localize "BSKR.Ability" }}</th>
                            <th scope="col" class="visually-hidden">{{ localize "BSKR.AbilityScoreShort" }}</th>
                            <th scope="col">{{ localize "BSKR.AbilityModifierShort" }}</th>
                            <th scope="col">{{ localize "BSKR.SavingThrowShort" }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each abilities}}
                        <tr>
                            <th scope="row">{{ label }}</th>
                            <td class="score">{{ bskr-numberFormat value }}</td>
                            <td>{{ bskr-numberFormat mod signDisplay="always" }}</td>
                            <td>{{ bskr-numberFormat save.value signDisplay="always" }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/each}}
            </div>
            <dl>
                {{#if summary.skills}}
                <div>
                    <dt>{{ localize "BSKR.Skills" }}</dt>
                    <dd>{{ summary.skills }}</dd>
                </div>
                {{/if}}
                {{#if summary.gear}}
                <div>
                    <dt>{{ localize "BSKR.Gear" }}</dt>
                    <dd>{{ summary.gear }}</dd>
                </div>
                {{/if}}
                {{#if summary.vulnerabilities}}
                <div>
                    <dt>{{ localize "BSKR.Vulnerabilities" }}</dt>
                    <dd>{{ summary.vulnerabilities }}</dd>
                </div>
                {{/if}}
                {{#if summary.resistances}}
                <div>
                    <dt>{{ localize "BSKR.Resistances" }}</dt>
                    <dd>{{ summary.resistances }}</dd>
                </div>
                {{/if}}
                {{#if summary.immunities}}
                <div>
                    <dt>{{ localize "BSKR.Immunities" }}</dt>
                    <dd>{{ summary.immunities }}</dd>
                </div>
                {{/if}}
                <div>
                    <dt>{{ localize "BSKR.Senses" }}</dt>
                    <dd>{{ summary.senses }}</dd>
                </div>
                <div>
                    <dt>{{ localize "BSKR.Languages" }}</dt>
                    <dd>{{ summary.languages }}</dd>
                </div>
                <div>
                    <dt>{{ localize "BSKR.AbbreviationCR" }}</dt>
                    <dd>{{ summary.cr }}</dd>
                </div>
            </dl>
        </div>
        {{#each actionSections}}
        <div class="statblock-actions {{ @key }}">
            <h5 class="statblock-actions-title">{{ label }}</h5>
            {{{ description }}}
            {{#each actions}}
            <div class="statblock-action">
                {{{ openingTag }}}
                <span class="name">{{ name }}</span>
                {{{ description }}}
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
</div>
