<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{item.img}}" data-tooltip="{{item.name}}" data-edit="img"/>

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'BSKR.BackgroundName' }}"/>
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{itemType}}</h4>
                <span class="item-status">{{itemStatus}}</span>
            </div>

            <ul class="summary flexrow">
                <li>
                    {{> "bskr.item-source"}}
                </li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "BSKR.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "BSKR.Details" }}</a>
        <a class="item" data-tab="advancement">{{ localize "BSKR.AdvancementTitle" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        <div class="tab flexrow active" data-group="primary" data-tab="description">
            {{editor enriched.description target="system.description.value" button=true editable=editable
                     engine="prosemirror" collaborate=false}}
        </div>

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">

            {{!-- Identifier --}}
            <div class="form-group">
                <label>{{ localize "BSKR.Identifier" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.identifier" value="{{ system.identifier }}"
                           placeholder="{{ item.identifier }}">
                </div>
                <p class="hint">{{ localize "BSKR.IdentifierError" }}</p>
            </div>

            {{!-- Starting Equipment --}}
            <h3 class="form-header">
                {{ localize "BSKR.StartingEquipment.Title" }}
                <a class="config-button" data-action="starting-equipment"
                   data-tooltip="BSKR.StartingEquipment.Action.Configure"
                   aria-label="{{ localize 'BSKR.StartingEquipment.Action.Configure' }}">
                    <i class="fa-solid fa-gear" aria-hidden="true"></i>
                </a>
            </h3>
            {{#with system.startingEquipmentDescription}}{{{ this }}}{{else}}{{ localize "None" }}{{/with}}

        </div>

        {{!-- Advancement Tab --}}
        {{> "bskr.item-advancement"}}
    </section>
</form>
