<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{item.img}}" data-tooltip="{{item.name}}" data-edit="img">

        <div class="header-details flexrow">
            <h1 class="charname">
                {{#if system.identified}}
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'BSKR.ItemName' }}">
                {{else}}
                <input name="system.unidentified.name" type="text" value="{{system.unidentified.name}}"
                       placeholder="{{ localize 'BSKR.NameUnidentified' }}">
                {{/if}}
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{itemType}}</h4>
                <label class="equipped">
                    <input type="checkbox" name="system.equipped" {{checked system.equipped}}>
                    {{#if system.equipped}}
                        {{ localize "BSKR.Equipped" }}
                        {{#if editable}}<i class="fa-solid fa-toggle-on"></i>{{/if}}
                    {{else}}
                        {{ localize "BSKR.Unequipped" }}
                        {{#if editable}}<i class="fa-solid fa-toggle-off"></i>{{/if}}
                    {{/if}}
                </label>
                <label class="identified">
                    <input type="checkbox" name="system.identified" {{checked system.identified}}>
                    {{#if system.identified}}
                    {{ localize "BSKR.Identified" }}
                    {{#if editable}}<i class="fa-solid fa-toggle-on"></i>{{/if}}
                    {{else}}
                    {{ localize "BSKR.Unidentified.Title" }}
                    {{#if editable}}<i class="fa-solid fa-toggle-off"></i>{{/if}}
                    {{/if}}
                </label>
            </div>

            <ul class="summary flexrow">
                <li>
                    {{#if concealDetails}}
                    <span>{{ localize "BSKR.Unidentified.Title" }}</span>
                    {{else}}
                    <select name="system.rarity" {{~#if concealDetails}} inert{{/if}}>
                        {{selectOptions config.itemRarity selected=system.rarity blank=""}}
                    </select>
                    {{/if}}
                </li>
                <li>
                    {{> "bskr.item-source"}}
                </li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item" data-tab="contents">{{localize "BSKR.Contents"}}</a>
        <a class="item" data-tab="description">{{localize "BSKR.Description"}}</a>
        <a class="item" data-tab="details">{{localize "BSKR.Details"}}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">
        {{!-- Contents Tab --}}
        <div class="tab inventory flexcol" data-group="primary" data-tab="contents">
            {{> "bskr.inventory" sections=inventory}}
        </div>

        {{!-- Description Tab --}}
        {{> "bskr.item-description"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            {{#bskr-concealSection concealDetails}}

            <h3 class="form-header">{{localize "BSKR.ItemContainerDetails"}}</h3>

            {{!-- Container Properties --}}
            <div class="form-group stacked container-properties">
                <label>{{ localize "BSKR.ItemContainerProperties" }}</label>
                {{#each properties}}
                <label class="checkbox">
                    <input type="checkbox" name="system.properties.{{ @key }}" {{ checked selected }}>
                    {{ label }}
                </label>
                {{/each}}
            </div>

            <div class="form-group">
                <label>{{localize "BSKR.ItemContainerCapacity"}}</label>
                <div class="form-fields">
                    {{numberInput system.capacity.value name="system.capacity.value" placeholder="â€”"}}
                </div>
            </div>

            <div class="form-group">
                <label>{{localize "BSKR.ItemContainerCapacityType"}}</label>
                <select name="system.capacity.type">
                    {{selectOptions config.itemCapacityTypes selected=system.capacity.type}}
                </select>
            </div>

            <div class="form-group">
                <label>{{localize "BSKR.Attunement"}}</label>
                <select name="system.attunement" data-dtype="Number">
                    {{selectOptions config.attunements selected=system.attunement}}
                </select>
            </div>

            {{/bskr-concealSection}}
        </div>
    </section>
</form>
