{{!-- Activation Cost --}}
<div class="form-group input-select">
    <label>{{ localize "BSKR.ItemActivationCost" }}</label>
    <div class="form-fields">
        {{#if (and system.activation.type (not isCostlessAction))}}
            <input type="number" step="any" name="system.activation.cost"
                   value="{{system.activation.cost}}" placeholder="&mdash;">
        {{/if}}
        <select name="system.activation.type" data-tooltip="BSKR.ItemActivationType">
            {{selectOptions config.abilityActivationTypes selected=system.activation.type blank=""}}
        </select>
    </div>
</div>
{{#if system.activation.type}}

{{!-- Activation Condition --}}
<div class="form-group">
    <label>{{ localize "BSKR.ItemActivationCondition" }}</label>
    <div class="form-fields">
        <input type="text" name="system.activation.condition" value="{{system.activation.condition}}">
    </div>
</div>

{{#if isCrewed}}
<div class="form-group">
    <label>{{ localize "BSKR.Cover" }}</label>
    <div class="form-fields">
        <select name="system.cover" data-dtype="Number">
            {{selectOptions config.cover selected=system.cover blank=""}}
        </select>
    </div>
</div>
{{/if}}

{{!-- Ability Target --}}
<div class="form-group input-select-select">
    <label>{{ localize "BSKR.Target" }}</label>
    <div class="form-fields">
        {{#if system.hasScalarTarget}}
            <input type="text" name="system.target.value" value="{{source.target.value}}"
                   placeholder="&mdash;" data-formula-editor>
        {{/if}}
        {{#if system.hasAreaTarget}}
            <select name="system.target.units" data-tooltip="BSKR.TargetUnits">
                {{selectOptions config.movementUnits selected=system.target.units blank=""}}
            </select>
        {{/if}}
        <select name="system.target.type" data-tooltip="BSKR.TargetType">
            {{#select system.target.type}}
                 <option value="">{{localize "BSKR.None"}}</option>
                 <optgroup label="{{localize 'BSKR.TargetTypeIndividual'}}">
                     {{selectOptions config.individualTargetTypes labelAttr="label"}}
                 </optgroup>
                 <optgroup label="{{localize 'BSKR.TargetTypeArea'}}">
                     {{selectOptions config.areaTargetTypes labelAttr="label"}}
                 </optgroup>
            {{/select}}
        </select>
    </div>
</div>

{{!-- Ability Target Width --}}
{{#if isLine}}
<div class="form-group input-select-select">
    <label>{{ localize "BSKR.TargetWidth" }}</label>
    <div class="form-fields">
        <input type="number" step="any" name="system.target.width"
            value="{{system.target.width}}" placeholder="&mdash;">
    </div>
</div>
{{/if}}

{{!-- Ability Range --}}
<div class="form-group input-select">
    <label>{{ localize "BSKR.Range" }}</label>
    <div class="form-fields">
        {{#if system.hasScalarRange}}
            <input type="number" step="any" name="system.range.value" value="{{system.range.value}}"
                   placeholder="{{localize 'BSKR.Normal'}}" data-tooltip="BSKR.RangeNormal">
            <span class="sep">/</span>
            <input type="number" step="any" name="system.range.long" value="{{system.range.long}}"
                   placeholder="{{localize 'BSKR.Long'}}" data-tooltip="BSKR.RangeLong">
        {{/if}}
        <select name="system.range.units" data-tooltip="BSKR.RangeUnits">
            {{#select system.range.units}}
                <option value="">{{localize "BSKR.None"}}</option>
                <optgroup label="{{localize 'BSKR.RangeDistance'}}">
                    {{selectOptions config.movementUnits}}
                </optgroup>
                {{selectOptions config.rangeTypes}}
            {{/select}}
        </select>
    </div>
</div>

{{!-- Effect Duration --}}
<div class="form-group input-select">
    <label>{{ localize "BSKR.Duration" }}</label>
    <div class="form-fields">
        {{#if system.hasScalarDuration}}
            <input type="text" name="system.duration.value" value="{{source.duration.value}}"
                   placeholder="&mdash;" data-tooltip="BSKR.DurationValue" data-formula-editor>
        {{/if}}
        <select name="system.duration.units" data-tooltip="BSKR.DurationType">
            {{#select system.duration.units}}
                <option value="">{{localize "BSKR.None"}}</option>
                <optgroup label="{{localize 'BSKR.DurationTime'}}">
                    {{selectOptions config.scalarTimePeriods}}
                </optgroup>
                <optgroup label="{{localize 'BSKR.DurationPermanent'}}">
                    {{selectOptions config.permanentTimePeriods}}
                </optgroup>
                {{selectOptions config.specialTimePeriods}}
            {{/select}}
        </select>
    </div>
</div>

{{!-- Limited Uses --}}
<div class="form-group uses-per">
    <label>{{ localize "BSKR.LimitedUses" }}</label>
    <div class="form-fields">
        {{#if system.uses.per}}
        <input type="number" step="any" name="system.uses.value"
               value="{{system.uses.value}}" data-tooltip="BSKR.UsesAvailable">
        <span class="sep">{{localize "BSKR.of"}}</span>
        <input type="text" name="system.uses.max" value="{{source.uses.max}}"
               data-tooltip="BSKR.UsesMax" data-formula-editor>
        <span class="sep">{{localize "BSKR.per"}}</span>
        {{/if}}
        <select name="system.uses.per" data-tooltip="BSKR.UsesPeriod">
            {{selectOptions config.limitedUsePeriods selected=system.uses.per labelAttr="label" blank=(localize "BSKR.None")}}
        </select>
    </div>
</div>

{{#if isFormulaRecharge}}
<div class="form-group">
    <label>{{localize "BSKR.RecoveryFormula"}}</label>
    <div class="form-fields">
        <input type="text" name="system.uses.recovery" value="{{system.uses.recovery}}" data-formula-editor>
    </div>
</div>
{{/if}}

{{!-- Consumption --}}
<div class="form-group consumption">
    <label>{{ localize "BSKR.ConsumeTitle" }}</label>
    <div class="form-fields">
        {{#if system.consume.type}}
            <input type="number" step="any" name="system.consume.amount" value="{{system.consume.amount}}"
                   data-tooltip="BSKR.ConsumeAmount" placeholder="{{ localize 'BSKR.QuantityAbbr' }}">
            {{#if abilityConsumptionHint}}
            <input type="text" name="system.consume.target" value="{{ system.consume.target }}"
                   placeholder="{{ localize abilityConsumptionHint }}">
            {{else}}
            <select name="system.consume.target" data-tooltip="BSKR.ConsumeTarget">
                {{selectOptions abilityConsumptionTargets selected=system.consume.target blank=""}}
            </select>
            {{/if}}
        {{/if}}
        <select name="system.consume.type" data-tooltip="BSKR.ConsumeType">
            {{selectOptions config.abilityConsumptionTypes selected=system.consume.type blank=(localize "BSKR.None")}}
        </select>
    </div>
</div>

{{!-- Prompt Configuration --}}
<div class="form-group">
    {{#if (eq item.type "consumable")}}
    <label class="checkbox" data-tooltip="BSKR.CONSUMABLE.FIELDS.uses.autoDestroy.hint">
        <input type="checkbox" name="system.uses.autoDestroy" {{checked system.uses.autoDestroy}}>
        {{ localize "BSKR.CONSUMABLE.FIELDS.uses.autoDestroy.label" }}
    </label>
    {{/if}}
    {{#if item.hasAreaTarget}}
    <label class="checkbox" data-tooltip="BSKR.TemplatePromptTooltip">
        <input type="checkbox" name="system.target.prompt" {{checked system.target.prompt}}>
        {{ localize "BSKR.TemplatePrompt" }}
    </label>
    {{/if}}
    {{#if system.uses.per}}
    <label class="checkbox" data-tooltip="BSKR.LimitedUsesPromptTooltip">
        <input type="checkbox" name="system.uses.prompt" {{checked system.uses.prompt}}>
        {{ localize "BSKR.LimitedUsesPrompt" }}
    </label>
    {{/if}}
    {{#if (and (eq item.type "spell") system.consume.type)}}
    <label class="checkbox" data-tooltip="BSKR.ConsumeScalingTooltip">
        <input type="checkbox" name="system.consume.scale" {{checked system.consume.scale}}>
        {{ localize "BSKR.ConsumeScaling" }}
    </label>
    {{/if}}
</div>
{{/if}}
