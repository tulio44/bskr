<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{item.img}}" data-tooltip="{{item.name}}" data-edit="img">

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'BSKR.ItemName' }}">
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{itemType}}</h4>
                <span class="item-status">{{itemStatus}}</span>
            </div>

            <ul class="summary flexrow">
                <li>
                    {{labels.featType}}
                </li>
                <li>
                    <input type="text" name="system.requirements" value="{{system.requirements}}" placeholder="{{ localize 'BSKR.Requirements' }}">
                </li>
                <li>
                    {{> "bskr.item-source"}}
                </li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "BSKR.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "BSKR.Details" }}</a>
        <a class="item" data-tab="effects">{{ localize "BSKR.Effects" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "bskr.item-description" }}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            <h3 class="form-header">{{ localize "BSKR.ItemFeatureDetails" }}</h3>

            {{!-- Feature Type --}}
            <div class="form-group">
                <label>{{ localize "BSKR.ItemFeatureType" }}</label>
                <select name="system.type.value">
                    {{ selectOptions config.featureTypes selected=system.type.value blank="" labelAttr="label" }}
                </select>
            </div>

            {{#if itemSubtypes}}
            <div class="form-group">
                <label>
                    {{ localize "BSKR.ItemFeatureSubtype"
                                category=(lookup (lookup config.featureTypes system.type.value) "label") }}
                </label>
                <select name="system.type.subtype">
                    {{ selectOptions itemSubtypes selected=system.type.subtype blank="" }}
                </select>
            </div>
            {{/if}}

            {{!-- Feature Properties --}}
            <div class="feature-properties form-group stacked">
                <label>{{ localize "BSKR.ItemFeatureProperties" }}</label>
                {{#each properties}}
                <label class="checkbox">
                    <input type="checkbox" name="system.properties.{{ @key }}" {{ checked selected }}> {{ label }}
                </label>
                {{/each}}
            </div>

            <h3 class="form-header">{{ localize "BSKR.Prerequisites.Header" }}</h3>

            <div class="form-group">
                <label>{{ localize "BSKR.Prerequisites.FIELDS.prerequisites.level.label" }}</label>
                {{ numberInput system.prerequisites.level name="system.prerequisites.level" step=1 }}
                <p class="hint">{{ localize "BSKR.Prerequisites.FIELDS.prerequisites.level.hint" }}</p>
            </div>

            {{#if system.isEnchantmentSource}}
            <h3 class="form-header">{{ localize "BSKR.ENCHANTMENT.Label" }}</h3>

            <div class="form-group">
                <label>{{ localize "BSKR.ENCHANTMENT.FIELDS.enchantment.items.max.label" }}</label>
                <input type="text" name="system.enchantment.items.max" value="{{ source.enchantment.items.max }}">
                <p class="hint">{{ localize "BSKR.ENCHANTMENT.FIELDS.enchantment.items.max.hint" }}</p>
            </div>

            <div class="form-group">
                <label>{{ localize "BSKR.ENCHANTMENT.FIELDS.enchantment.items.period.label" }}</label>
                <select name="system.enchantment.items.period">
                    {{ selectOptions config.enchantmentPeriods selected=system.enchantment.items.period
                                     labelAttr="label" blank=(localize "BSKR.ENCHANTMENT.Period.Never") }}
                </select>
                <p class="hint">{{ localize "BSKR.ENCHANTMENT.FIELDS.enchantment.items.period.hint" }}</p>
            </div>

            {{/if}}

            <h3 class="form-header">{{ localize "BSKR.FeatureUsage" }}</h3>

            {{!-- Item Activation Template --}}
            {{> "bskr.item-activation"}}

            {{!-- Recharge Requirement --}}
            {{#if system.activation.type}}
            <div class="form-group recharge">
                <label>{{ localize "BSKR.FeatureActionRecharge" }}</label>
                <div class="form-fields">
                    <span>{{ localize "BSKR.FeatureRechargeOn" }}</span>
                    {{numberInput system.recharge.value name="system.recharge.value"
                                  placeholder=(localize "BSKR.FeatureRechargeResult")}}
                    <label class="checkbox">
                        {{ localize "BSKR.Charged" }}
                        <input type="checkbox" name="system.recharge.charged" {{checked system.recharge.charged}}>
                    </label>
                </div>
            </div>
            {{/if}}

            <h3 class="form-header">{{ localize "BSKR.FeatureAttack" }}</h3>

            {{!-- Item Action Template --}}
            {{> "bskr.item-action"}}
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects flexcol" data-group="primary" data-tab="effects">
            {{> "bskr.active-effects"}}
        </div>
    </section>
</form>
