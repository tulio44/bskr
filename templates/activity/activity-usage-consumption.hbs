<section>
    {{~#if hasConsumption}}
    <fieldset>
        <legend>{{ localize "BSKR.USAGE.SECTION.Consumption" }}</legend>
        {{#each fields}}
        <div class="form-group">
            <label>
                {{ field.label }}
                {{#if warn}}<i class="fa-solid fa-triangle-exclamation warning"></i>{{/if}}
            </label>
            <div class="form-fields">
                {{ formInput field name=name value=value input=input }}
            </div>
            {{#if field.hint}}<p class="hint">{{{ field.hint }}}{{/if}}
        </div>
        {{/each}}
    </fieldset>
    {{> "bskr.activity-usage-notes" }}
    {{/if~}}
</section>
